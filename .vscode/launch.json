    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/<program>"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'boolean-algebra-mini-calc'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=boolean-algebra-mini-calc",
                    "--package=boolean-algebra-mini-calc"
                ],
                "filter": {
                    "name": "boolean-algebra-mini-calc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'boolean-algebra-mini-calc'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=boolean-algebra-mini-calc",
                    "--package=boolean-algebra-mini-calc"
                ],
                "filter": {
                    "name": "boolean-algebra-mini-calc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}